<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="208dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/buttons"
        android:padding="10dp">


        <TextView
            android:id="@+id/order_delete"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginEnd="4dp"
            android:gravity="end"
            android:text="@string/delOrder"
            android:textColor="@android:color/secondary_text_light"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_username"
            android:layout_width="179dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_delete"

            android:layout_marginLeft="5dp"
            android:text="Name : Shane Kalish"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_phonenumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_username"
            android:layout_marginLeft="5dp"
            android:text="Phone Number : 076-67856456"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/order_address"
            android:layout_width="160dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_phonenumber"
            android:layout_marginTop="10dp"
            android:text="Address : 23, Peradeniya Road Kandy"
            android:textColor="@android:color/white"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/order_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/order_address"
            android:layout_marginTop="10dp"
            android:text="Date : 13/8/2020"
            android:textColor="@android:color/white"
            android:textSize="18sp"

            android:textStyle="bold" />


        <ImageView
            android:id="@+id/img_presc"
            android:layout_width="123dp"
            android:layout_height="113dp"
            android:layout_below="@id/order_delete"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="51dp"
            android:layout_marginEnd="0dp"
            android:layout_marginRight="0dp"
            android:gravity="end"
            app:srcCompat="@drawable/presc" />


    </RelativeLayout>


</RelativeLayout>
