<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:layout_marginTop="20dp"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginEnd="15dp"
    tools:context=".editItems" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <ImageView
            android:id="@+id/product_image_edit"
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="112dp"
            android:layout_marginTop="2dp"
            android:layout_marginEnd="119dp"
            android:scaleType="centerCrop"
            app:srcCompat="@drawable/item3" />

        <EditText
            android:id="@+id/product_name_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_image_edit"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/product_price_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_name_edit"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="17dp"
            android:textStyle="bold" />


        <EditText
            android:id="@+id/product_description_edit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_price_edit"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/input_design"
            android:padding="12dp"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="14dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_apply_changes"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/product_description_edit"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:text="@string/Applychan"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_delete_product"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/btn_apply_changes"
            android:layout_marginStart="5dp"
            android:layout_marginTop="5dp"
            android:layout_marginEnd="5dp"
            android:layout_marginBottom="5dp"
            android:background="@drawable/buttons"
            android:padding="12dp"
            android:text="@string/delproduct"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="14dp"
            android:textStyle="bold" />



    </RelativeLayout>
</RelativeLayout>