<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/common_google_signin_btn_text_dark_default">


        <TextView
            android:id="@+id/category"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="@string/cat"
            android:textAlignment="center"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="25sp"
            android:textStyle="bold" />


        <LinearLayout
            android:id="@+id/linear1_category"
            android:layout_width="381dp"
            android:layout_height="167dp"
            android:layout_below="@+id/category"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="28dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/medicine"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/med" />

                <ImageView
                    android:id="@+id/mombaby"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:src="@drawable/momnbab" />


        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear2_category"
            android:layout_width="380dp"
            android:layout_height="170dp"
            android:layout_below="@+id/linear1_category"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/weightloss"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/wightloss" />

                <ImageView
                    android:id="@+id/vitamin"
                    android:layout_width="155dp"
                    android:layout_height="160dp"
                    android:src="@drawable/vit" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear3_category"
            android:layout_width="400dp"
            android:layout_height="162dp"
            android:layout_below="@+id/linear2_category"
            android:layout_centerHorizontal="true"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:gravity="center"
            android:orientation="horizontal">

                <ImageView
                    android:id="@+id/personal"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:layout_marginRight="10dp"
                    android:src="@drawable/personalcare" />

                <ImageView
                    android:id="@+id/health"
                    android:layout_width="155dp"
                    android:layout_height="155dp"
                    android:src="@drawable/health" />

        </LinearLayout>


</RelativeLayout>