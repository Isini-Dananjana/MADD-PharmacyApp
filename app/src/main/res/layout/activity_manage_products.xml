<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent2"
    tools:context=".ManageProducts"
    android:label="Manage Products"
    >




    <TextView
        android:id="@+id/item_name1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/darker_gray"
        android:text="Bio-Oil"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:textStyle="bold" />


    <ImageView
        android:id="@+id/item_image1"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/item_name1"
        android:layout_marginTop="2dp"
        android:background="@android:color/background_light"
        android:scaleType="center"
        app:srcCompat="@drawable/item3" />

    <TextView
        android:id="@+id/item_price1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_image1"
        android:text="LKR 1550.00"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/item_description1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_price1"
        android:layout_marginTop="2dp"
        android:text="Bio oill skin care 120ML"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="16dp" />

    <TextView
        android:id="@+id/item_name2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_description1"
        android:layout_marginTop="20dp"
        android:background="@android:color/darker_gray"
        android:backgroundTint="@android:color/darker_gray"
        android:text="Acne_Aid"
        android:textAlignment="center"
        android:textColor="@android:color/background_dark"
        android:textSize="20dp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/item_image2"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:layout_below="@+id/item_name2"
        android:layout_marginTop="2dp"
        android:background="@android:color/background_light"
        android:scaleType="center"
        app:srcCompat="@drawable/item1" />

    <TextView
        android:id="@+id/item_price2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_image2"
        android:text="LKR 350.00"
        android:textAlignment="center"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="18dp" />

    <TextView
        android:id="@+id/item_description2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/item_price2"
        android:text="Product Description"
        android:layout_marginTop="2dp"
        android:textAlignment="center"
        android:textSize="16dp"
        android:textColor="@color/colorPrimaryDark"
        />

</RelativeLayout>